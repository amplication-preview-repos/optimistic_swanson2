datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id])
  blogPostId String?
  content    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model BlogPost {
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  comments   Comment[]
  content    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  published  Boolean?
  title      String?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model Category {
  blogPosts   BlogPost[]
  createdAt   DateTime   @default(now())
  description String?
  id          String     @id @default(cuid())
  name        String?
  updatedAt   DateTime   @updatedAt
}

model User {
  blogPosts BlogPost[]
  comments  Comment[]
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
